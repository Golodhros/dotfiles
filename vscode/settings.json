{
  "editor.fontLigatures": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.formatOnSave": true,
  "editor.accessibilitySupport": "off",
  "editor.formatOnPaste": true,
  "editor.inlineSuggest.enabled": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "eslint.options": {},
  "workbench.colorTheme": "Monokai Seti Dark",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "workbench.colorCustomizations": {
    "editor.findMatchHighlightBackground": "#ff00c3a7", //Other SEARCH MATCHES
    "editor.selectionBackground": "#e37933",
    "editor.selectionHighlightBackground": "#f55385",
    "editor.findMatchBackground": "#e37933" //Current SEARCH MATCH
  },
  "workbench.editor.showTabs": "multiple",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    // "editor.formatOnSave": true,
    // "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[sass]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[go]": {
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.formatOnSave": false
  },
  "[markdown]": {
    "editor.formatOnSave": false
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.formatOnType": true
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "trailing-spaces.trimOnSave": true,
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "http.systemCertificates": false,
  "files.associations": {
    "*.tsx": "typescriptreact",
    ".env*": "makefile"
  },
  "files.insertFinalNewline": true,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "workbench.iconTheme": "seti",
  "openInGitHub.defaultBranch": "master",
  "openInGitHub.defaultRemote": "origin",
  // Playwright
  "playwright.reuseBrowser": true,
  "playwright.env": {
    "TESTING_DOMAIN": "http://localhost:3000"
  },
  "window.zoomLevel": 1,
  "git.openRepositoryInParentFolders": "never",
  "colorize.languages": ["javascript", "typescript", "typescriptreact"],
  "gitlens.advanced.messages": {
    "suppressRebaseSwitchToTextWarning": true
  },
  "prisma.showPrismaDataPlatformNotification": false,
  "github.copilot.editor.enableAutoCompletions": true
}
